<% if notice %>
<p class="notice"><%= notice %></p>
<% end %>

<h1>Products Catalog</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Description</th>
    <th>Image</th>
    <th>Price</th>
  </tr>

  <% @products.each do |product| %>
    <tr class="entry">
      <td><%= product.title %></td>
      <td>
      <%= product.description %>
      <%= link_to 'Add to Cart', line_items_path(product: product.id), method: :post %>
      </td>
      <td><%= product.image_url %></td>
      <td><%= product.price %></td>
    </tr>

  <% end %>
</table>
