<!DOCTYPE html>
<html>
<head>
  <title>Minishopify</title>
  <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
  <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
  <%= csrf_meta_tags %>
</head>
<body>
<div class="leaves-ui">
  <h1 class="artcart"><%= image_tag('theArtCart2.png')%></h1>
</div>
<div class="container">
        <div class="row">
        <% if @cart %>
          <% mainclass = "span9" %>
          <%= hidden_div_if(@cart.line_items.empty?, {id: 'cart', class: 'span3'}) do %>
            <%= render @cart %>
          <% end %>
        <% else %>
           <% mainclass = "span12" %>
        <% end %>
        <div id="main" class="<%= mainclass%>">
<%= yield %>

 </div>
</body>
</html>
